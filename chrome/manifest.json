{
  "manifest_version": 2,
  "name": "SkipTo",
  "version": "0.7",

  "description" : "",
  "homepage_url": "https://github.com/skipto/extension",
  "author": "Nicholas Hoyt",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Comma"
      }
    }
  }
}
